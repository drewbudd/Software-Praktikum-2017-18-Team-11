<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mapfragment_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.uni_stuttgart.informatik.sopra.sopraapp.view.map.MapFragment"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:mapbox_cameraTargetLat="40.73581"
        mapbox:mapbox_cameraTargetLng="-73.99155"
        mapbox:mapbox_styleUrl="@string/mapbox_style_mapbox_streets"
        mapbox:mapbox_cameraZoom="11" />


    <LinearLayout
        android:id="@+id/fab3_and_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom|end">

        <TextView
            android:id="@+id/fab3_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_weight="1"
            android:alpha="0"
            android:text="Settings" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab3"
            android:layout_width="@dimen/fab_sub_size"
            android:layout_height="@dimen/fab_sub_size"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_sub_margin"
            android:layout_weight="1"
            app:fabSize="normal"
            app:srcCompat="@android:drawable/ic_menu_manage" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/fab2_and_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom|end">

        <TextView
            android:id="@+id/fab2_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_weight="1"
            android:text="Report Damage"
            android:alpha="0"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab2"
            android:layout_width="@dimen/fab_sub_size"
            android:layout_height="@dimen/fab_sub_size"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_sub_margin"
            android:layout_weight="1"
            app:fabSize="normal"
            app:srcCompat="@android:drawable/ic_menu_myplaces" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fab1_and_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom|end">

        <TextView
            android:id="@+id/fieldButtonLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_weight="1"
            android:text="Add field"
            android:alpha="0"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fieldButton"
            android:layout_width="@dimen/fab_sub_size"
            android:layout_height="@dimen/fab_sub_size"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_sub_margin"
            android:layout_weight="1"
            app:fabSize="normal"
            app:srcCompat="@android:drawable/ic_menu_mapmode" />
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:fabSize="normal"
        app:srcCompat="@android:drawable/ic_menu_edit" />

</FrameLayout>
